---
import siteConfig from '../../site.config.mjs';

const owner = siteConfig.owner;
const business = siteConfig.business
const base = import.meta.env.BASE_URL;
---

<!-- Debug: Test if component is rendering -->
<div style="border: 4px solid red; padding: 20px; margin: 20px;">
  <p style="color: red; font-weight: bold;">DEBUG: LandingHero-2 is rendering</p>
  <p style="color: red;">Image path: /images/bg-landing-page.jpg</p>
</div>

<div
	class="absolute top-[80px] bottom-[120px] left-0 right-0 z-0 border-4 border-blue-500 bg-red-500"  <!-- Added border and temporary background -->
	style={{
		backgroundImage: 'url(/images/bg-landing-page.jpg)',
		backgroundSize: 'cover',
		backgroundPosition: 'center',
		backgroundRepeat: 'no-repeat',
		opacity: 0.6,
	}}
>
	<!-- Debug text inside the background div -->
	<div style="color: white; font-weight: bold; position: absolute; top: 10px; left: 10px;">
		Background Image Div
	</div>
</div>
<div class="container text-left mb-32 relative z-10 border-2 border-green-500">  <!-- Added border -->
	<h1 class="text-3xl md:text-4xl lg:text-5xl font-bold leading-tight">
		{business} Photography
	</h1>
	<p class="mt-4 text-base md:text-lg text-gray-700">A place to showcase my photography</p>
	<a
		href=`${base}/collections`
		class="mt-8 inline-block px-6 py-3 border-2 border-black rounded-md
                      hover:bg-black hover:text-white transition-all duration-300
                      text-sm md:text-base font-medium
                      transform hover:scale-105 active:scale-95"
	>
		View Gallery
	</a>
</div>