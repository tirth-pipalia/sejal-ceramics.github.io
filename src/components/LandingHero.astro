---
import siteConfig from '../../site.config.mjs';

export interface Props {
  variant?: 'simple' | 'with-background';
  backgroundImage?: string;
  opacity?: number;
  alignment?: 'left' | 'center';
}

const { 
  variant = 'simple',
  backgroundImage = '/images/bg-landing-page.jpg',
  opacity = 0.6,
  alignment = 'center'
} = Astro.props;

const owner = siteConfig.owner;
const business = siteConfig.business;
const base = import.meta.env.BASE_URL;
---

<section class="relative min-h-screen flex items-center justify-center py-20 md:py-16 overflow-hidden">

  {variant === 'with-background' && (
    <div
      class="absolute inset-0 z-0"
      style={{
        backgroundImage: `url(${base}${backgroundImage})`,
        backgroundSize: 'cover',
        backgroundPosition: 'center',
        backgroundRepeat: 'no-repeat',
      }}
    >

      <div 
        class="absolute inset-0 bg-white" 
        style={`opacity: ${opacity}`}
      ></div>
    </div>
  )}

</section>